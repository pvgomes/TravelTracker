# Travel Tracker - Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
# For local development with Docker PostgreSQL:
DATABASE_URL=postgresql://traveltracker:traveltrackerpassword@localhost:5432/travel_tracker

# For production with Neon (replace with your actual Neon connection string):
# DATABASE_URL=postgresql://username:password@ep-example.neon.tech/database?sslmode=require

# PostgreSQL Connection Details (automatically parsed from DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=traveltracker
PGPASSWORD=traveltrackerpassword
PGDATABASE=travel_tracker

# Session Security
# Generate a secure random string for production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Development Environment
NODE_ENV=development

# Optional: Force Neon usage even with local DATABASE_URL
# USE_NEON=false